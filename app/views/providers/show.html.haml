= render "shared/back"
.o-site.c-details.c-details--provider
  .o-wrapper.o-wrapper--limit
    %p#notice= notice

    %header
      .u-intro.u-mb-large
        %h1.u-title
          %strong= @provider.name
          sucht Mundschutze

    .u-mb-large
      %h2.u-subtitle Notiz
      %p= @provider.description

    .o-box.u-bg-default
      .o-layout
        .o-layout__item.u-1_2.u-mb-default
          .u-subtitle E-Mail
          %a.u-link{ href: "mailto: #{@provider.email}" }
            = @provider.email

        .o-layout__item.u-1_2.u-mb-default
          .u-subtitle Telefon
          %a.u-link{ href: "tel: #{@provider.phone}" }
            = @provider.phone

        .o-layout__item.u-1_1
          .u-subtitle Adresse
          %p
            = @provider.street
            %br
            = @provider.postal_code
            = @provider.city
