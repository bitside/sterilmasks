= render "shared/back"
.o-site.o-site--spacing.u-bg-provider
  .o-wrapper.o-wrapper--limit
    .c-listing__header
      .c-listing__title
        %h1.u-title
          %strong= @providers.count
          - if params[:search]
            = "Treffer für »#{params[:search]}«"
          - else
          bieten Mundschutze
      .c-listing__action
        = link_to "Als Anbieter registrieren", new_provider_url, class: "u-link"
    .c-listing
      %form{ method: 'get' }
        %input.c-listing__search{ value: params[:search], name: 'search', placeholder: "Anbieter durchsuchen", type: "text", required: true }
        .c-listing__search__actions
          - if params[:search]
            .c-listing__search__reset
              = link_to "Suche zurücksetzen", providers_path, class: "u-link"
          %input.c-button{ type: "submit", value: "Suchen" }
      .c-listing-group
        - @providers.each do |provider|
          = link_to provider_path(provider), class: 'c-listing__item' do
            .c-listing__item__name= provider.name
            .c-listing__item__city= "#{provider.postal_code} #{provider.city}"
